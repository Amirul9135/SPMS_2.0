<style>
    .modal-xl {
        max-width: 80%;
    }

    .card-header>span {
        cursor: pointer;
    }

    .btn-normal {
        background-color: gainsboro;
    }

    .btn-normal:hover {
        background-color: white;
        border: solid 1px cyan;
    }

    .prevent-select {
        -webkit-user-select: none;
        /* Safari */
        -ms-user-select: none;
        /* IE 10 and IE 11 */
        user-select: none;
        /* Standard syntax */
    }

    .my-tab-show {
        transform: scaleX(1);
        visibility: visible;
        max-height: fit-content;
    }


    .my-tab {
        transition: all .4s ease-in-out;
        transform-origin: left;
    }

    .my-tab-hide {
        position: absolute;
        transform: scaleX(0);
        height: 0px;
        max-height: 0px;
        overflow: hidden;
    }

    .btn-answered {
        background-color: rgb(200, 239, 253);
    }

    .btn-active {
        background-color: #2f89f5;
        color: white;
    }

    .btn-active:hover {
        background-color: white;
        border: solid 1px cyan;
    }

    #dv_clock {
        position: absolute;
        z-index: 2;
        display: inline-block;
        background: conic-gradient(green 0.00% 50%, #c9c9c9 50% 100%);
        border: 1px solid #aea7ac;
        height: 80px;
        width: 80px;
        border-radius: 50%;
        right: 1em;
        cursor: grab;
    }

    #dv_clock>* {
        pointer-events: none;
    }

    #dv_clock>div {
        pointer-events: none;
        left: 50%;
        top: 50%;
        position: relative;
        transform: translate(-50%, -50%);
        background: #fff;
        width: 60px;
        height: 60px;
        border-radius: 50%;
        text-align: center;
        vertical-align: middle;
        line-height: 60px;
        white-space: nowrap;
    }

    #dv_clock>div>div {
        position: absolute;
        left: 50%;
        top: 50%;
        border-radius: 10px;
        padding: 5px;
        line-height: 1.2em;
        box-sizing: border-box;
        transform: translate(-50%, -50%);
        background-color: cornflowerblue;
        color: white;
    }


    .overlayHide::before {
        content: " ";
        position: absolute;
        left: 0;
        top: 0;
        width: 100vw;
        height: 100vh;
        z-index: 9999999;
        background-color: #4d4d4d;
    }

    .overlayHide::after {
        content: "CONFIDENTIAL";
        position: absolute;
        left: 50%;
        top: 50%;
        transform: translate(-50%, -50%);
        font-size: 3em;
        color: red;
        padding: 20px;
        border: 5px solid red;
        border-radius: 10px;
        z-index: 99999999;
    }
</style>

<div class="side-app" onload="setup()">
